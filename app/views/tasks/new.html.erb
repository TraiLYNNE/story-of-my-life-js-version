<h2>Add a Task</h2>

<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited the creation of this task:
      </h2>

      <ul>
        <% @task.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :page_id %>

  <div class="field">
    <%= f.label :name %>>
    <%= f.text_field :name %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
