<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@page.errors.count, "error") %> prohibited the creation of this page:
      </h2>

      <ul>
        <% @page.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :chapter_id %>

  <div class="field">
    <%= f.label :quote %>
    <%= f.text_field :quote %>
  </div>

  <div class="field">
    <%= f.label :thank_you %>
    <%= f.text_field :thank_you %>
  </div>

  <div class="field">
    <%= f.label :lesson_learned %>
    <%= f.text_field :lesson_learned %>
  </div>

  <p>Create Today's Tasks:</p>
  <%= f.fields_for :tasks do |t| %>
    <div class="field">
      <%= t.label :name %>
      <%= t.text_field :name %>
    </div>
  <% end %>

  <p>Entry</p>
  <%= f.fields_for :entries do |e| %>
    <div class="field">
      <%= e.label :mood %>
      <%= e.text_field :mood %>
    </div>

    <div class="field">
      <%= e.label :content %>
      <%= e.text_area :content %>
    </div>
  <% end %>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
