<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@book.errors.count, "error") %> prohibited the creation of this book:
      </h2>

      <ul>
        <% @book.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :quote %><br>
    <%= f.text_area :quote %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
