<%= form_for(@idate) do |f| %>
  <% if @idate.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@idate.errors.count, "error") %> prohibited the creation of this Important Date:
      </h2>

      <ul>
        <% @idate.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :chapter_id %>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
